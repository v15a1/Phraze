<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#CCC"
                android:endColor="#CCC"
                android:angle="45" />
            <corners
                android:radius="60dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#1F1F1F"
                android:endColor="#111111"
                android:angle="45" />
            <corners
                android:radius="60dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#333333"
                android:endColor="#1F1F1F"
                android:angle="45" />
            <corners
                android:radius="60dp"/>
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_phrase_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_phrase_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_phrases_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_phrases_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_phrase_activity_button" />

    <Button
        android:id="@+id/edit_phrases_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_phrases_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_phrases_activity_button" />
</androidx.constraintlayout.widget.ConstraintLayout>
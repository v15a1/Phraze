<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/default_layout_spacing"
        android:layout_marginStart="@dimen/default_layout_spacing"
        android:layout_marginEnd="@dimen/default_layout_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saved_translation_phrase_textview"
            android:layout_marginTop="@dimen/default_layout_spacing"
            android:layout_marginStart="@dimen/default_layout_spacing"
            android:layout_marginEnd="@dimen/default_layout_spacing"
            android:layout_marginBottom="@dimen/default_layout_spacing_5dp"
            android:textColor="@color/darkGrey"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginEnd="@dimen/default_layout_spacing"
            android:layout_marginStart="@dimen/default_layout_spacing"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saved_translation_translation_textview"
            android:layout_marginTop="@dimen/default_layout_spacing_5dp"
            android:layout_marginStart="@dimen/default_layout_spacing"
            android:layout_marginEnd="@dimen/default_layout_spacing"
            android:layout_marginBottom="@dimen/default_layout_spacing"
            android:textColor="@color/colorAccent"
            android:textStyle="bold|italic"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
